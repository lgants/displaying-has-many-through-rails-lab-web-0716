<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Department:</strong>
  <%= @doctor.department %>
</p>

<p>
  <strong>Patients:</strong>
  <% @doctor.patients.each do |patient| %>
    <%= link_to "#{patient.name}", patient_path(patient) %>
  <% end %>
  <!-- <%= link_to @doctor.department %> -->
</p>
<p>
<strong>Appointment Time(s):</strong>
<% @doctor.appointments.each do |appointment| %>
  <li> <%= appointment.appointment_datetime.strftime("%B %e, %Y at %H:%M") %> </li>
<% end %>
</p>

<%= link_to 'Edit', edit_doctor_path(@doctor) %> |
<%= link_to 'Back', doctors_path %>
